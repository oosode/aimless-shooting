&GLOBAL
PROJECT __project__
SEED __seed__
PRINT_LEVEL LOW
PROGRAM CP2K
RUN_TYPE __run_type__
&END GLOBAL

&FORCE_EVAL
METHOD QMMM
&DFT
CHARGE __charge__
MULTIPLICITY 1
BASIS_SET_FILE_NAME __basis_set_file_name__
POTENTIAL_FILE_NAME __potential_file_name__
&MGRID
CUTOFF 300
COMMENSURATE T
&END MGRID
&XC
DENSITY_CUTOFF 1.0E-10
GRADIENT_CUTOFF 1.0E-10
TAU_CUTOFF 1.0E-10
&XC_FUNCTIONAL __xc_functional__
&END XC_FUNCTIONAL
&END XC
&QS
METHOD GPW
EXTRAPOLATION PS
EXTRAPOLATION_ORDER 2
&END QS
&SCF
MAX_SCF __max_scf__
EPS_SCF 0.00005
&OT ON
MINIMIZER DIIS
STEPSIZE 0.1
PRECONDITIONER FULL_ALL
&END OT
&OUTER_SCF T
EPS_SCF 0.00005
MAX_SCF __max_scf__
&END OUTER_SCF
&PRINT
&RESTART OFF
&END
&END
&END SCF
&END DFT
&MM
&FORCEFIELD
PARMTYPE AMBER
PARM_FILE_NAME ../ref/aqp1.top
VDW_SCALE14 0.5
EI_SCALE14 0.8333
&SPLINE
RCUT_NB 1.0
EMAX_SPLINE 12.0
&END SPLINE
&END FORCEFIELD
&NEIGHBOR_LISTS
GEO_CHECK  F
&END NEIGHBOR_LISTS
&POISSON
&EWALD
EWALD_TYPE SPME
ALPHA 4.0E-1
GMAX 27
&END EWALD
&END POISSON
&END MM
&QMMM
E_COUPL GAUSS
USE_GEEP_LIB 12
NOCOMPATIBILITY T
NOCENTER T
NOCENTER0 F
&QM_KIND Cqm  
MM_INDEX 1186 1189 
&END QM_KIND 
&QM_KIND Oqm  
MM_INDEX 1191 1190 7737 3876 8532 3783 8940 
&END QM_KIND 
&QM_KIND Nqm  
&END QM_KIND 
&QM_KIND Hqm  
MM_INDEX 3877 7736 3875 1192 7738 1188 1187 
MM_INDEX 8942 8531 8533 3782 3784 8939 8941 
&END QM_KIND 
&CELL
ABC __sbox1__ __sbox2__ __sbox3__
PERIODIC XYZ
&END CELL
&LINK
QM_INDEX 1186
QM_KIND H
MM_INDEX 1184
LINK_TYPE IMOMM
&END LINK
&PRINT
&QMMM_LINK_INFO SILENT
&END QMMM_LINK_INFO
&END PRINT
&END QMMM
&SUBSYS
&CELL
ABC __lbox1__ __lbox2__ __lbox3__
MULTIPLE_UNIT_CELL 1 1 1
&END CELL

&KIND Hqm
BASIS_SET __basis_set__
ELEMENT H
POTENTIAL GTH-__xc_functional__-q1
&END KIND
&KIND Cqm
BASIS_SET __basis_set__
ELEMENT C
POTENTIAL GTH-__xc_functional__-q4
&END KIND
&KIND Nqm
BASIS_SET __basis_set__
ELEMENT N
POTENTIAL GTH-__xc_functional__-q5
&END KIND
&KIND Oqm
BASIS_SET __basis_set__
ELEMENT O
POTENTIAL GTH-__xc_functional__-q6
&END KIND
&KIND H_LINK
BASIS_SET __basis_set__
ELEMENT H
POTENTIAL GTH-__xc_functional__-q1
&END KIND

__colvar__

&TOPOLOGY
COORD_FILE_NAME __coord_file_name__
COORD_FILE_FORMAT __coord_file_format__
CONN_FILE_NAME __conn_file_name__
CONN_FILE_FORMAT __conn_file_format__
MULTIPLE_UNIT_CELL 1 1 1
PARA_RES OFF
&END TOPOLOGY
&END SUBSYS
&END FORCE_EVAL

&MOTION
&MD
ENSEMBLE NVT
STEPS __steps__ 
TIMESTEP __timestep__
TEMPERATURE __temperature__
COMVEL_TOL 0.001
ANGVEL_TOL 0.001
ANGVEL_ZERO
&THERMOSTAT
TYPE CSVR
&CSVR
TIMECON __timecon__
&END CSVR
&END THERMOSTAT
&END MD
&PRINT
&TRAJECTORY
FILENAME =__project__.xyz
FORMAT XYZ
&EACH
MD __steps__
&END
&END TRAJECTORY

&STRUCTURE_DATA
__structure_data__
FILENAME =__project__.coll
&EACH
MD 1
&END
&END STRUCTURE_DATA
&END

__constraints__

&END MOTION
